{
  "name": "uhr-cloud-script",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "audit": "biome ci",
    "build:gas-types": "node scripts/build-gas-types.js",
    "build:npm-types": "node scripts/build-npm-types.js",
    "build:gas-lib": "node scripts/build-gas-lib.js",
    "build:npm-lib": "node scripts/build-npm-lib.js",
    "build": "pnpm run build:gas-types && pnpm run build:npm-types && pnpm run build:gas-lib && pnpm run build:npm-lib",
    "check": "biome check --write && tsc --noEmit",
    "clean": "rm -rf node_modules",
    "push": "clasp push",
    "pull": "clasp pull",
    "login": "clasp login"
  },
  "devDependencies": {
    "@biomejs/biome": "^2",
    "@google/clasp": "3.0.6-alpha",
    "@types/google-apps-script": "^2",
    "ts-morph": "^27",
    "typescript": "^5"
  }
}
